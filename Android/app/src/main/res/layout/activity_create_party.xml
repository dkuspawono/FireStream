<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_party"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.syntonic.firestream.CreatePartyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:text="Party Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Party Name"
                app:met_textColor="@android:color/white"
                app:met_textColorHint="@android:color/white"
                app:met_underlineColor="#fffffe"
                app:met_floatingLabel="highlight"
                android:inputType="text"
                android:id="@+id/et_party_name"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password (optional)"
                app:met_textColor="@android:color/white"
                app:met_textColorHint="@android:color/white"
                app:met_underlineColor="#fffffe"
                app:met_floatingLabel="highlight"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:id="@+id/et_party_password"/>

            <TextView
                android:text="Choose an Existing Playlist"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                android:id="@+id/textView" />

            <Button
                android:text="Your Spotify Playlists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_spotify_playlists" />

            <TextView
                android:text="or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAlignment="center"/>


            <TextView
                android:text="Use the Playlist Builder"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_seed_container"></LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancel"
            android:theme="@style/ButtonRed"
            android:layout_weight="1" />

        <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_create"
            android:theme="@style/ButtonGreen"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
