<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_people_white_24dp"
        android:id="@+id/iv_party_current_album"
        android:layout_marginRight="12dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="center">

        <TextView
            android:text="Party Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_party_name" />

        <TextView
            android:text="Host Name | Current Song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_party_details"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock_white_24dp"
            android:id="@+id/iv_password_secured"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            android:layout_gravity="center" />

        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_party_count"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_people_white_24dp"
            android:id="@+id/imageView"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>